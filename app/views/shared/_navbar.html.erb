<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to movies_path, class: "navbar-brand" do %>
    <%= image_tag "bookmark.png" %>
    <% end %>
<div class ="buttons d-flex justify-content-around" >
    <div><%= link_to 'Movies', '#'%></div>
    <div style="margin-right:15px; margin-left:15px;""><%= link_to 'Music', '#'%></div>
    <div><%= link_to 'Galleries', '#'%></div>
</div>

  <div class= "searchbox d-flex justify-content-between align-items-center">
  <div class="searchbar">
  <%= form_tag movies_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a friend"%>
  </div>
    <div class="button">

    <%= submit_tag "Search", class: "btn btn-flat mr-2" %>
    </div>
  <% end %>
</div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Add a new bookmark", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Profile", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
