<div class="container">
  <br>
  <br>
  <div class="recommendations-title-box d-flex align-items-center">
    <h2>Latest Recommendations by people you follow</h2>
  </div>
  <% @recommendations.shuffle.each do |r| %>
    <div class="recomendation-card d-flex align-items-center">
      <% if r.user.photo.attached? %>
        <%= cl_image_tag r.user.photo.key %>
      <% else %>
        <img src="https://pixy.org/download/301929/" class="recommendation-card-avatar">
      <% end %>
      <div class="card-text-info d-flex flex-column">
        <h3><%= r.movie.title %></h3>
        <p><%= r.movie.storyline.truncate(200) %></p>
        <div class="tag-in-line d-flex">
          <% if r.tags.present? %>
            <p class="green"> <strong><%=link_to r.user.first_name , user_path(r.user) %></strong>  has recommended this movie with the tags : </p>
            <% r.tags.each do |tag| %>
              <div class="tag-card"><%= tag.name.downcase.capitalize %></div>
            <% end %>
          <% else %>
            <p class="green"> <strong><%=link_to r.user.first_name , user_path(r.user) %></strong>  has recommended this movie</p>

          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
