function refreshForm(innerHTML) {
  const newTagForm = document.querySelector('tag_name');
  newTagForm.innerHTML = innerHTML;
}

function addTag(newTag) {
  const tags = document.querySelector('.tags_<%= @recommendation.id %>');
  tags.insertAdjacentHTML('beforeend', newTag);
}

function closeOneModal(modalId) {

    // get modal
    const modal = document.getElementById(modalId);

    // change state like in hidden modal
    modal.classList.remove('show');
    modal.setAttribute('aria-hidden', 'true');
    modal.setAttribute('style', 'display: none');

     // get modal backdrop
     const modalBackdrops = document.getElementsByClassName('modal-backdrop');

     // remove opened modal backdrop
      document.body.removeChild(modalBackdrops[0]);
  }


